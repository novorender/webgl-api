    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch NPM debug",
            "request": "launch",
            "runtimeArgs": [
                "test"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "browserLaunchLocation": "ui",
            "url": "http://localhost:9000",
            "webRoot": "${workspaceFolder}",
        }
    ]
}